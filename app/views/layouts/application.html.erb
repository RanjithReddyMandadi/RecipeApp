            <li><%= link_to "My Recipes", my_recipes_path %></li>
			
	     <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
		<% if current_user.avatar_url(:thumb).to_s.empty?  %>
            <li><%= link_to image_tag('default_avatar.png', :title=>current_user.email, :class=>"img-circle"), edit_user_registration_path %> </li>
                <% else %>
             <li><%=link_to image_tag(current_user.avatar_url(:thumb).to_s, :title=>current_user.email, :class=>"img-circle"), edit_user_registration_path %> </li>
                <% end %>
		<% else %>
 	    <li><%= link_to "Sign Up", new_user_registration_path %></li>
	    <li><%= link_to "Log in", new_user_session_path %></li>
		<% end %>
             	
